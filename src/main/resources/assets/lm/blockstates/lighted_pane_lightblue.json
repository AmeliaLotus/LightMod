{
    "multipart": [
        {   "apply": { "model": "lighted_pane_lightblue_post" }},
        {   "when": { "north": true },
            "apply": { "model": "lighted_pane_lightblue_side" }
        },
        {   "when": { "east": true },
            "apply": { "model": "lighted_pane_lightblue_side", "y": 90 }
        },
        {   "when": { "south": true },
            "apply": { "model": "lighted_pane_lightblue_side_alt" }
        },
        {   "when": { "west": true },
            "apply": { "model": "lighted_pane_lightblue_side_alt", "y": 90 }
        },
        {   "when": { "north": false },
            "apply": { "model": "lighted_pane_lightblue_noside" }
        },
        {   "when": { "east": false },
            "apply": { "model": "lighted_pane_lightblue_noside_alt" }
        },
        {   "when": { "south": false },
            "apply": { "model": "lighted_pane_lightblue_noside_alt", "y": 90 }
        },
        {   "when": { "west": false },
            "apply": { "model": "lighted_pane_lightblue_noside", "y": 270 }
        }
    ]
}
